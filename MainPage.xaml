<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gerenciador.MainPage"
             BackgroundColor="#525BF8">

    <ScrollView>
        <VerticalStackLayout
         Padding="30,0"
         Spacing="25">
            <ImageButton Source="config.png" WidthRequest="40" BackgroundColor="White" HeightRequest="40" CornerRadius="22" HorizontalOptions="End"  Margin="30,30,0,0" Padding="10" Clicked="GoAddCategoriaPage"/>
            <Image Source="logo.png" WidthRequest="200" HeightRequest="200"/>
            <Button BackgroundColor="white"   TextColor="#3B42C4" Text="Tarefas" Clicked="GoTarefaPage"/>
            <Button BackgroundColor="white"    TextColor="#3B42C4" Text="Compromissos" Clicked="GoCompromissoPage"/>
           
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
